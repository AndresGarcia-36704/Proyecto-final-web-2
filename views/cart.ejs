<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrito de Compras - Maquillaje</title>
    <link rel="stylesheet" href="/css/cart.css"> <!-- Ruta correcta al CSS -->
</head>
<body>

    <div class="container">
        <h2><%= message %></h2>

        <% if (Object.keys(cart).length > 0) { %>
            <div class="cart-summary">
                <table>
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% 
                            let total = 0;
                            for (let productId in cart) { 
                                let product = cart[productId];
                                let productTotal = product.price * product.quantity;
                                total += productTotal;
                        %>
                            <tr>
                                <td><%= product.name %></td>
                                <td>$<%= product.price.toFixed(2) %></td>
                                <td><%= product.quantity %></td>
                                <td>$<%= productTotal.toFixed(2) %></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>

                <h3>Total: $<%= total.toFixed(2) %></h3>
            </div>

            <!-- Botón para abrir el modal -->
            <label for="openModalBtn" class="button">Finalizar Compra</label>

            <!-- Modal para los datos de envío -->
            <input type="checkbox" id="openModalBtn" class="modal-toggle">
            <div id="checkoutModal" class="modal">
                <div class="modal-content">
                    <label for="openModalBtn" class="close">&times;</label>
                    <h3>Datos de Envío</h3>
                    <form action="/cart/checkout" method="POST">
                        <label for="document">Documento de identidad:</label>
                        <input type="text" id="document" name="document" required>
                        <label for="firstName">Nombre:</label>
                        <input type="text" id="firstName" name="firstName" required>
                        <label for="lastName">Apellido:</label>
                        <input type="text" id="lastName" name="lastName" required>
                        <label for="address">Dirección:</label>
                        <input type="text" id="address" name="address" required>
                        <label for="phone">Teléfono:</label>
                        <input type="text" id="phone" name="phone" required>
                        <button type="submit">Realizar Pedido</button>
                    </form>
                </div>
            </div>



        <% } else { %>
            <p>No tienes productos en el carrito.</p>
        <% } %>

                    <!-- Botón para regresar y seguir añadiendo productos al carrito -->
                    <a href="/" class="button">Volver</a>
    </div>

</body>
</html>
