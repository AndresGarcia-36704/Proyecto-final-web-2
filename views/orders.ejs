<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Visualización de Pedidos</title>
    <link rel="stylesheet" href="/css/orders.css">
</head>
<body>
    <header>
        <h1>Visualización de Pedidos</h1>
    </header>
    <main>
        <div class="table-responsive">
        <table border="1">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Dirección</th>
                    <th>Teléfono</th>
                    <th>Carrito</th>
                    <th>Estado</th>
                    <th>Fecha</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach(order => { %>
                    <tr>
                        <td><%= order.id %></td>
                        <td><%= order.firstName %> <%= order.lastName %></td>
                        <td><%= order.address %></td>
                        <td><%= order.phone %></td>
                        <td>
                            <% 
                                const cart = JSON.parse(order.cart);
                                for (const [key, item] of Object.entries(cart)) {
                            %>
                                <p><%= item.name %> (x<%= item.quantity %>)</p>
                            <% } %>
                        </td>
                        <td><%= order.status %></td>
                        <td><%= new Date(order.createdAt).toLocaleString() %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
        <div class="actions">
            <button onclick="window.location.href='/makeups/list'"> << Regresar</button>
        </div>
    </main>
    <footer>
        &copy; 2024 Tienda de Maquillaje. Todos los derechos reservados.
    </footer>
</body>
</html>
